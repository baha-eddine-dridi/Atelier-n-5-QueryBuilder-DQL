{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recherche d'auteurs par nombre de livres</h1>

    {{ form_start(form) }}
    {{ form_row(form.min) }}
    {{ form_row(form.max) }}
    <button type="submit" class="btn btn-primary">Rechercher</button> {# Ajoutez le bouton de soumission ici #}
    {{ form_end(form) }}

